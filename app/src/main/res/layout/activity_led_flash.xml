<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- 标题栏 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp"
        android:background="#FFF3E0">

        <Button
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="← 返回"
            android:textSize="14sp"
            android:background="?android:attr/selectableItemBackground" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="LED闪烁控制"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

    </LinearLayout>

    <!-- 说明文字 -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="选择要让LED闪烁的锁通道"
        android:textSize="14sp"
        android:textColor="#666666"
        android:padding="12dp"
        android:layout_marginBottom="16dp" />

    <!-- LED闪烁控制区域 -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="LED闪烁控制"
        android:textSize="16sp"
        android:textStyle="bold"
        android:padding="8dp" />

    <GridLayout
        android:id="@+id/gridLEDs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="4"
        android:layout_marginBottom="16dp">

        <!-- LED控制按钮将通过代码动态添加 -->

    </GridLayout>

    <!-- 闪烁持续时间设置 -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="闪烁持续时间设置"
        android:textSize="16sp"
        android:textStyle="bold"
        android:padding="8dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="12dp"
        android:background="#F5F5F5"
        android:layout_marginBottom="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="持续时间（毫秒）："
            android:textSize="14sp" />

        <EditText
            android:id="@+id/etFlashDuration"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="1000"
            android:inputType="number"
            android:textSize="14sp"
            android:layout_marginStart="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ms"
            android:textSize="14sp"
            android:layout_marginStart="4dp" />

    </LinearLayout>

    <!-- 预设时间按钮 -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="快速设置时间"
        android:textSize="14sp"
        android:textColor="#666666"
        android:padding="8dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <Button
            android:id="@+id/btnTime500"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="500ms"
            android:textSize="12sp"
            android:layout_margin="2dp" />

        <Button
            android:id="@+id/btnTime1000"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="1000ms"
            android:textSize="12sp"
            android:layout_margin="2dp" />

        <Button
            android:id="@+id/btnTime2000"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="2000ms"
            android:textSize="12sp"
            android:layout_margin="2dp" />

        <Button
            android:id="@+id/btnTime5000"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="5000ms"
            android:textSize="12sp"
            android:layout_margin="2dp" />

    </LinearLayout>

    <!-- 操作按钮 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <Button
            android:id="@+id/btnSelectAll"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="全选"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/btnClearAll"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="清空"
            android:layout_marginStart="8dp" />

    </LinearLayout>

    <!-- 执行闪烁按钮 -->
    <Button
        android:id="@+id/btnExecuteFlash"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="执行LED闪烁"
        android:textSize="16sp"
        android:textStyle="bold"
        android:background="#FF9800"
        android:textColor="@color/white"
        android:padding="16dp"
        android:layout_marginTop="16dp" />

    <!-- 响应数据显示 -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="闪烁结果"
        android:textSize="14sp"
        android:textStyle="bold"
        android:padding="8dp"
        android:layout_marginTop="16dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#FAFAFA"
        android:padding="8dp">

        <TextView
            android:id="@+id/tvResponseData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="等待闪烁结果..."
            android:textSize="12sp"
            android:fontFamily="monospace" />

    </ScrollView>

</LinearLayout>