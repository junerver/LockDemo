<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- 标题栏 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp"
        android:background="#FFF3E0">

        <Button
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="← 返回"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:background="?android:attr/selectableItemBackground" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="LED闪烁控制"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center" />

    </LinearLayout>

    <!-- LED闪烁控制区域 -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="LED闪烁控制"
        android:textSize="16sp"
        android:textStyle="bold"
        android:padding="8dp" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:layout_marginBottom="16dp">

        <Button
            android:id="@+id/btnLED1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="LED 1 闪烁"
            android:layout_margin="2dp"
            android:background="#FF9800"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/btnLED2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="LED 2 闪烁"
            android:layout_margin="2dp"
            android:background="#FF9800"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/btnLED3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="LED 3 闪烁"
            android:layout_margin="2dp"
            android:background="#FF9800"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/btnLED4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="LED 4 闪烁"
            android:layout_margin="2dp"
            android:background="#FF9800"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/btnLED5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="LED 5 闪烁"
            android:layout_margin="2dp"
            android:background="#FF9800"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/btnLED6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="LED 6 闪烁"
            android:layout_margin="2dp"
            android:background="#FF9800"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/btnLED7"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="LED 7 闪烁"
            android:layout_margin="2dp"
            android:background="#FF9800"
            android:textColor="@color/white" />

    </GridLayout>

    <!-- 响应数据显示 -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="LED闪烁响应数据"
        android:textSize="14sp"
        android:textStyle="bold"
        android:padding="8dp"
        android:layout_marginTop="16dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="#FAFAFA"
        android:padding="8dp">

        <TextView
            android:id="@+id/tvResponseData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="等待LED闪烁响应数据..."
            android:textSize="12sp"
            android:fontFamily="monospace"
            android:textColor="#333333" />

    </ScrollView>

</LinearLayout>