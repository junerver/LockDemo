<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- 标题栏 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp"
        android:background="#E3F2FD">

        <Button
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="← 返回"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:background="?android:attr/selectableItemBackground" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="依次/同时 开锁"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center" />

    </LinearLayout>

    <!-- 开锁模式切换 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="12dp"
        android:background="#FFF8E1"
        android:layout_marginBottom="16dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="开锁模式："
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvCurrentMode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="依次开锁"
            android:textSize="14sp"
            android:textColor="#FF6F00"
            android:textStyle="bold"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/btnToggleMode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="切换模式"
            android:textSize="12sp"
            android:background="#FF9800"
            android:textColor="@color/white" />

    </LinearLayout>

    <!-- 说明文字 -->
    <TextView
        android:id="@+id/tvDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="选择要依次开启的锁（按顺序逐一打开）"
        android:textSize="14sp"
        android:textColor="#666666"
        android:padding="12dp"
        android:layout_marginBottom="16dp" />

    <!-- 锁选择区域 -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="选择锁（点击选择/取消）"
        android:textSize="16sp"
        android:textStyle="bold"
        android:padding="8dp" />

    <GridLayout
        android:id="@+id/gridLocks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="4"
        android:layout_marginBottom="16dp">

        <!-- 锁选择按钮将通过代码动态添加 -->

    </GridLayout>

    <!-- 选择信息 -->
    <TextView
        android:id="@+id/tvSelectedLocks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="已选择：无"
        android:textSize="14sp"
        android:padding="8dp"
        android:background="#F5F5F5"
        android:layout_marginBottom="16dp" />

    <!-- 操作按钮 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <Button
            android:id="@+id/btnSelectAll"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="全选"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/btnClearAll"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="清空"
            android:layout_marginStart="8dp" />

    </LinearLayout>

    <!-- 执行按钮 -->
    <Button
        android:id="@+id/btnExecuteOpen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="执行开锁"
        android:textSize="16sp"
        android:textStyle="bold"
        android:background="#4CAF50"
        android:textColor="@color/white"
        android:padding="16dp"
        android:layout_marginTop="16dp" />

    <!-- 响应数据显示 -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="执行结果"
        android:textSize="14sp"
        android:textStyle="bold"
        android:padding="8dp"
        android:layout_marginTop="16dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#FAFAFA"
        android:padding="8dp">

        <TextView
            android:id="@+id/tvResponseData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="等待执行结果..."
            android:textSize="12sp"
            android:fontFamily="monospace" />

    </ScrollView>

</LinearLayout>