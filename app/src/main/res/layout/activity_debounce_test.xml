<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- 标题栏 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp"
        android:background="#E8F5E8">

        <Button
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="← 返回"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:background="?android:attr/selectableItemBackground" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="防抖测试"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center" />

    </LinearLayout>

    <!-- 防抖状态显示 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp"
        android:background="#F0F8FF"
        android:layout_marginBottom="16dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="防抖控制："
            android:textSize="14sp"
            android:textStyle="bold" />

        <Switch
            android:id="@+id/switchDebounce"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp" />

    </LinearLayout>

    <!-- 状态说明 -->
    <TextView
        android:id="@+id/tvDebounceStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="防抖功能：已禁用 (指令将直接发送)"
        android:textSize="14sp"
        android:textColor="#666666"
        android:padding="12dp"
        android:background="#FFF8DC"
        android:layout_marginBottom="16dp" />

    <!-- 测试说明 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#F5F5F5"
        android:padding="16dp"
        android:layout_marginBottom="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="测试说明"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="• 防抖启用：指令将按顺序执行，确保前一条指令完成后再执行下一条\n• 防抖禁用：指令将直接发送，可能产生并发冲突\n• 点击批量发送将循环执行1-7号锁的开锁指令(0x82)"
            android:textSize="14sp"
            android:textColor="#666666"
            android:lineSpacingExtra="2dp" />

    </LinearLayout>

    <!-- 操作按钮区域 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <Button
            android:id="@+id/btnBatchSend"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="批量发送开锁指令"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="#FF9800"
            android:padding="12dp"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/btnClearLog"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="清空日志"
            android:textSize="12sp"
            android:background="#9E9E9E"
            android:textColor="@color/white"
            android:layout_marginStart="8dp" />

    </LinearLayout>

    <!-- 日志标题 -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="操作日志"
        android:textSize="16sp"
        android:textStyle="bold"
        android:padding="8dp"
        android:background="#E8E8E8"
        android:layout_marginBottom="4dp" />

    <!-- 响应数据显示区域 -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#FAFAFA"
        android:padding="8dp">

        <TextView
            android:id="@+id/tvResponseData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="等待防抖测试操作...\n\n提示：\n1. 切换防抖开关状态\n2. 点击批量发送按钮观察执行差异"
            android:textSize="12sp"
            android:fontFamily="monospace"
            android:lineSpacingExtra="2dp"
            android:textColor="#333333" />

    </ScrollView>

</LinearLayout>